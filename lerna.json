{
    "packages": ["packages/*"],
    "version": "independent",
    "npmClient": "yarn",
    "useWorkspaces": true,
    "stream":true,
    "registry": "https://registry.npmjs.org/",
    "command": {
      "publish": {
        "conventionalCommits": true,
        "message": "chore(release): publish",
        "ignoreChanges": ["**/stories/**", "**/tests/**"],
        "allowBranch": "master"
      },
      "version": {
        "ignoreChanges": ["**/stories/**", "**/tests/**"]
      }
    }
  }