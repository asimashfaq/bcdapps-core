{
  "name": "@bcdapps/boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate to create the full stack projects",
  "main": "index.js",
  "repository": "https://github.com/asimashfaq/bcdapps-core.git",
  "author": "asimashfaq <asimizb4@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "postinstall": "patch-package",
    "clean": "rm -rf node_modules && rm -rf packages/**/node_modules",
    "commit": "git-cz",
    "init:commitizen": "commitizen init cz-ccgls  --yarn --dev --exact --ignore-workspace-root-check --force",
    "lint": "eslint . --ext '*/**/*.{js,ts,tsx}'",
    "lint:fix": "eslint --fix . --ext '*/**/*.{js,ts,tsx}'",
    "format": "cross-env NODE_ENV=development NODE_OPTIONS=--max_old_space_size=4096 prettier **/**/*.{js,ts,tsx} --ignore-path ./.prettierignore --write && git status",
    "build:frontend": "yarn build:icons && yarn build:ui",
    "start:backend": "yarn build:common_backend && yarn build:subscription && yarn run:backend",
    "build:backend": "lerna run --scope @bcdapps/backend build",
    "run:backend": "lerna run --scope @bcdapps/backend start",
    "build:subscription": "lerna run --scope @bcdapps/subscription build",
    "build:common_backend": "lerna run --scope @bcdapps/common_backend build",
    "build:admin": "lerna run --scope @bcdapps/admin build",
    "build:ui": "lerna run --scope @bcdapps/ui build",
    "build:icons": "lerna run --scope @bcdapps/icons build",
    "storybook": "start-storybook -p 6006",
    "build:storybook": "build-storybook"

  },
  "config": {
    "commitizen": {
      "path": "cz-ccgls"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@babel/cli": "7.10.5",
    "@babel/core": "7.10.5",
    "@babel/plugin-proposal-class-properties": "7.10.4",
    "@babel/preset-env": "7.10.4",
    "@babel/preset-react": "7.10.4",
    "@babel/preset-typescript": "7.10.4",
    "@babel/runtime": "7.10.5",
    "@commitlint/config-conventional": "^9.1.2",
    "@nestjs/common": "^7.4.1",
    "@nestjs/core": "^7.4.1",
    "@nestjs/graphql": "^7.6.0",
    "@reduxjs/toolkit": "^1.4.0",
    "@storybook/addon-a11y": "5.3.19",
    "@storybook/addon-actions": "^6.0.16",
    "@storybook/addon-info": "^5.3.19",
    "@storybook/addon-knobs": "^6.0.16",
    "@storybook/addon-notes": "^5.3.19",
    "@storybook/addon-storysource": "6.0.13",
    "@storybook/addons": "^6.0.16",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "6.0.0-rc.13",
    "@storybook/storybook-deployer": "2.8.5",
    "@types/react": "^16.9.46",
    "@types/react-redux": "^7.1.9",
    "@types/redux-logger": "^3.0.8",
    "@types/styled-components": "^5.1.2",
    "apollo-server-core": "^2.15.1",
    "apollo-server-express": "^2.17.0",
    "babel-loader": "^8.1.0",
    "babel-preset-react-app": "^9.1.2",
    "commitizen": "^4.1.5",
    "commitlint": "^9.1.2",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "cz-ccgls": "^0.2.3",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^18.0.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-html": "^6.0.3",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.4.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "graphql": "^15.3.0",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "patch-package": "^6.2.2",
    "postcss-easy-import": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^1.16.4",
    "react": "^16.13.1",
    "react-redux": "^7.2.1",
    "react-scripts": "^3.4.3",
    "redux-logger": "^3.0.6",
    "redux-observable": "^1.2.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "storybook-addon-performance": "0.11.0",
    "tailwindcss-multi-theme": "^1.0.3",
    "typesafe-actions": "^5.1.0",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "babel-eslint": "^9.0.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^18.0.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-html": "^6.0.3",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.4.0",
    "prettier": "^1.16.4"
  },
  "dependencies": {
    "tailwindcss": "^1.7.3"
  }
}
